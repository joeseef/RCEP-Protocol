{
  "manifest_version": 3,
  "name": "RL4 Snapshot — Cross‑LLM Context Export",
  "version": "0.1.0",
  "description": "Export cross-LLM context packages (RCEP™) from Claude, ChatGPT, and Gemini",
  "permissions": ["storage", "activeTab", "clipboardWrite", "sidePanel", "declarativeContent"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://bard.google.com/*",
    "https://g.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*",
        "https://g.co/*"
      ],
      "js": ["lib/checksum.js", "lib/extraction.js", "lib/snapshot.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*.js", "popup.html", "popup.js", "styles/popup.css", "icons/*.png", "assets/*", "disclaimer.html"],
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*",
        "https://g.co/*"
      ]
    }
  ]
}

